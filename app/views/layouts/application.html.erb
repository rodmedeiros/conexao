<!DOCTYPE html>
<html>
<head>
  <title>Sistema UFF</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render 'partials/header' %>
<main>
  <div class="container">
    <% flash.each do |nome, msg| %>
        <div class="alert alert-<%= nome %>" role="alert">
          <%= msg %>
        </div>
    <% end %>
    <%= yield %>
  </div>
</main>

</body>
</html>
